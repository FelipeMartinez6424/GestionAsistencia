<h2>Asociaciones de Profesores a Materias y Grados</h2>
<a asp-action="Asociar" class="btn btn-primary">Crear Nueva Asociacion</a>
<table class="table">
    <thead>
        <tr>
            <th>Profesor</th>
            <th>Materia</th>
            <th>Grado</th>
            <th>Dia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asociacion in Model)
        {
            <tr>
                <td>@asociacion.Profesor.Nombre</td>
                <td>@asociacion.Materia.Nombre</td>
                <td>@asociacion.Grado.Nombre</td>
                <td>@asociacion.DiaSemana</td>
            </tr>
        }
    </tbody>
</table>
